# name: test/sql/encrypt_column.test
# description: test simple_encryption extension
# group: [simple_encryption]

# Require statement will ensure this test is run with this extension loaded
require simple_encryption

statement ok
CREATE TABLE test_encryption_1 AS SELECT 1 AS value FROM range(10);

statement ok
ALTER TABLE test_encryption_1 ADD COLUMN encrypted_value VARCHAR;

statement ok
UPDATE test_encryption_1 SET encrypted_value = encrypt(value);

statement ok
CREATE TABLE rd_data AS
  SELECT
      SUBSTRING(MD5(RANDOM()::TEXT), 1, 5) AS rd_values
  FROM
      range(10);

statement ok
SELECT encrypt(rd_values) AS encrypted_value FROM rd_data;

# Create plaintext table
statement ok
CREATE TABLE test_encryption_2 AS SELECT * FROM range(1, 11) AS value;

statement ok
SELECT encrypt(value) AS encrypted_value FROM test_encryption_2;
